<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/yoga_class_list_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YogaClassList"
    tools:ignore="ExtraText"
    tools:layout_editor_absoluteX="2dp"
    tools:layout_editor_absoluteY="88dp">


    <Button
        android:id="@+id/courseback_btn"
        android:layout_width="74dp"
        android:layout_height="56dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:onClick="onClickBack"
        android:text="&lt;"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/classListView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="88dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/fetch_class_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/courseback_btn" />

    <Button
        android:id="@+id/buttonAddClass"
        android:layout_width="158dp"
        android:layout_height="45dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="28dp"
        android:background="@color/black"
        android:onClick="onClickAddClass"
        android:text="Add Class"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/fetch_class_btn"
        android:layout_width="107dp"
        android:layout_height="46dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="28dp"
        android:text="refesh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
